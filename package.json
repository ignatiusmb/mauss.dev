{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && vite build",
    "format": "prettier -w src --plugin-search-dir=.",
    "check": "svelte-kit sync && pnpm check:style && pnpm check:svelte",
    "check:style": "prettier -c src --plugin-search-dir=.",
    "check:svelte": "svelte-check src --tsconfig ./tsconfig.json",
    "check:content": "cd content && markdownlint sites/**/*.md"
  },
  "packageManager": "pnpm@7.28.0",
  "prettier": "mauss/prettier.json",
  "devDependencies": {
    "@ignatiusmb/styles": "^0.1.1",
    "@sveltejs/adapter-vercel": "^2.4.1",
    "@sveltejs/kit": "^1.14.0",
    "@types/node": "^18.15.10",
    "katex": "^0.16.4",
    "markdown-it-texmath": "^1.0.0",
    "markdownlint-cli": "^0.32.2",
    "marqua": "^0.4.4",
    "mauss": "^0.4.10",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.10.0",
    "svelte": "^3.57.0",
    "svelte-check": "^3.1.4",
    "syv": "^0.0.21",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  }
}
