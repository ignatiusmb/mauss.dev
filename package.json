{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"format": "prettier -w .",
		"check": "pnpm check:style && pnpm check:svelte",
		"check:style": "prettier -c .",
		"check:svelte": "svelte-kit sync && svelte-check src --tsconfig ./tsconfig.json",
		"check:content": "cd content && pnpm dlx markdownlint-cli **/*.md"
	},
	"packageManager": "pnpm@8.12.0",
	"prettier": "mauss/prettier.json",
	"devDependencies": {
		"@fontsource-variable/fira-code": "^5.0.16",
		"@fontsource-variable/karla": "^5.0.19",
		"@ignatiusmb/styles": "^0.1.1",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "^1.30.1",
		"@types/node": "^20.10.4",
		"marqua": "^0.5.6",
		"mauss": "^0.7.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sharp": "^0.32.6",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"syv": "^0.0.30",
		"typescript": "^5.3.3",
		"vite": "^4.5.1"
	}
}
