{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"format": "prettier -w . --plugin=prettier-plugin-svelte",
		"check": "pnpm check:style && pnpm check:svelte",
		"check:style": "prettier -c . --plugin=prettier-plugin-svelte",
		"check:svelte": "svelte-kit sync && svelte-check src --tsconfig ./tsconfig.json",
		"check:content": "cd content && pnpm dlx markdownlint-cli **/*.md"
	},
	"packageManager": "pnpm@8.6.11",
	"prettier": "mauss/prettier.json",
	"devDependencies": {
		"@fontsource/fira-code": "^5.0.8",
		"@fontsource/karla": "^5.0.9",
		"@fontsource/rubik": "^5.0.9",
		"@ignatiusmb/styles": "^0.1.1",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.23.0",
		"@types/node": "^20.5.4",
		"marqua": "^0.5.3",
		"mauss": "^0.7.1",
		"prettier": "^3.0.2",
		"prettier-plugin-svelte": "^3.0.3",
		"sharp": "^0.32.5",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"syv": "^0.0.29",
		"typescript": "^5.1.6",
		"vite": "^4.4.9"
	}
}
