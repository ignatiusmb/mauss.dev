{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && vite build",
    "format": "prettier -w src --plugin-search-dir=.",
    "check": "pnpm check:style && pnpm check:svelte",
    "check:style": "prettier -c src --plugin-search-dir=.",
    "check:svelte": "svelte-kit sync && svelte-check src --tsconfig ./tsconfig.json",
    "check:content": "cd content && pnpm dlx markdownlint-cli **/*.md"
  },
  "packageManager": "pnpm@8.6.1",
  "prettier": "mauss/prettier.json",
  "devDependencies": {
    "@fontsource/fira-code": "^5.0.5",
    "@fontsource/karla": "^5.0.5",
    "@fontsource/rubik": "^5.0.5",
    "@ignatiusmb/styles": "^0.1.1",
    "@sveltejs/adapter-vercel": "^3.0.2",
    "@sveltejs/kit": "~1.16.3",
    "@types/node": "^20.4.5",
    "marqua": "^0.5.2",
    "mauss": "^0.6.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "sharp": "^0.32.4",
    "svelte": "^3.59.2",
    "svelte-check": "^3.4.6",
    "syv": "^0.0.27",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}
